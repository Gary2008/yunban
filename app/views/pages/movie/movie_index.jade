extends ../../layout

block link
	meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0")
	meta(name="keywords" content="电影、经典电影、热映、电视剧、美剧、影评、电影院、电影票、排行、推荐")
	meta(name="description" content="云瓣电影提供最新的电影介绍及评论包括上映影片的影讯查询及购票服务。你可以记录想看、在看和看过的电影电视剧，顺便打分、写影评。根据你的口味，云瓣电影会推荐好电影给你。")
	link(href="/libs/css/movie/movie_index.min.css",rel="stylesheet")
block content
	// 容器标签节点
	.wrapper
		.content
			.container-fluid
				.row
					.col-md-6.col-md-offset-1.screen
						// 顶部轮播图标签节点
						#scrollMovies
							each cat in categories
								if cat.name === '正在热映'
									.panel.panel-default
										.panel-heading.screen-header
											h4#headerNow
												a(href="/movie/results?q=#{cat.name}&p=0" target="_blank") #{cat.name}
												span 即将上映
												i »
											.slide-tip
												span.side-index 1
												span &nbsp;/&nbsp;
												span.side-max
												button.slide-prev
												button.slide-next
										#screenBody.panel-body.screen-body(style="width:10000px;")
											if cat.movies && cat.movies.length > 0
												each item in cat.movies
													.thumbnail.scroll-item(style="width:127px;")
														a(href="/movie/#{item._id}")
															if item.poster.indexOf('http') > -1
																img(src="#{item.poster}", alt="#{item.title}")
															else
																img(src="/upload/movie/#{item.poster}", alt="#{item.title}")
														.caption
															h5 #{item.title}
															p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片
						// 顶部轮播图下方广告标签节点
						.left-advertisement
							a(href="javascript:;")
								img(src="/libs/images/movie/middleImg/1.gif" alt="middelImg")
						// 选电影/选电视剧标签节点
						#fliterMovies.fliter-movies
							.screen
								.class-top
									span.active 选电影
									i &nbsp;/&nbsp;
									span 选电视剧
									hr
									ul
										li
											button.btn.btn-primary 热门
										li
											button.btn.btn-default 最新
										li
											button.btn.btn-default 经典
										li
											button.btn.btn-default 云瓣高分
										li
											button.btn.btn-default 冷门佳片
										li
											button.btn.btn-default 华语
										li
											button.btn.btn-default 欧美
										li
											button.btn.btn-default 韩国
									hr
								.sort
									label.radio-inline
										input(type="radio" name="sort" value="pv" checked)
										| 按热度排序&nbsp;
									label.radio-inline
										input(type="radio" name="sort" value="year")
										| 按时间排序&nbsp;
									label.radio-inline
										input(type="radio" name="sort" value="rating")
										| 按评价排序
								// 热门电影标签节点
								.screen-body
									each cat in categories
										if cat.name === '热门电影'
											.panel-default
												#classBody.panel-body.screen-body
													if cat.movies && cat.movies.length > 0
														each item in cat.movies
															.col-md-3.col-sm-3.col-xs-4
																.thumbnail
																	a(href="/movie/#{item._id}" target="_blank")
																		if item.poster.indexOf('http') > -1
																			img(src="#{item.poster}", alt="#{item.title}")
																		else
																			img(src="/upload/movie/#{item.poster}", alt="#{item.title}")
																	.caption
																		h5 #{item.title}&nbsp;
																			strong #{item.rating}
												a.more(href="javascript:;" role="button") 加载更多
								// 热门推荐标签节点
								#galleryFrames.panel.panel-default
									.panel-heading.screen-header
										h4 热门推荐
										.slide-tip
											span.side-index 1
											span &nbsp;/&nbsp;
											span.side-max
											button.slide-prev
											button.slide-next
									.pannel-body
										ul.slide-content.clearfix(style="")
											li.slide-item
												a(href="/movie/580765cc3c4315746e182e05")
													img(src="/libs/images/movie/galleryFrames/1.jpg" alt="新海诚正式踏入日本动画界大师级导演的行列")
												.slide-detail
													.slide-hd
														a(href="/movie/580765cc3c4315746e182e05" target="_blank")
															h5 新海诚正式踏入日本动画界大师级导演的行列
													.slide-hd
														p 你我相逢在黑夜的空中，你有你的我有我的方向，你记得也好，最好你忘掉，在这交会时互放的光亮。
											li.slide-item
												a(href="/movie/5809d0e421747bb2f2504ba1")
													img(src="/libs/images/movie/galleryFrames/2.jpg" alt="哪些无意之举引发了一场大混乱")
												.slide-detail
													.slide-hd
														a(href="/movie/5809d0e421747bb2f2504ba1" target="_blank")
															h5 哪些无意之举引发了一场大混乱
													.slide-hd
														p 英国神奇动物学家纽特的一个无意之举引发北美魔法世界秩序大混乱，一起聊聊我们亲身经历过的那些悲囧人僧~。
											li.slide-item
												a(href="/movie/580766853c4315746e182e08")
													img(src="/libs/images/movie/galleryFrames/3.jpg" alt="关于电影本身的电影")
												.slide-detail
													.slide-hd
														a(href="/movie/580766853c4315746e182e08" target="_blank")
															h5 下次送礼，送TA一把瑞士军刀
													.slide-hd
														p 《瑞士军刀男》这部脑洞大开的无节操影片，看似低俗的无厘头小幽默，实则蕴涵着对现实世界偏见与歧视的大大嘲讽。
											li.slide-item
												a(href="/movie/5807660d3c4315746e182e06")
													img(src="/libs/images/movie/galleryFrames/4.jpg" alt="【云瓣会客厅】王千源：用实力证明不凡")
												.slide-detail
													.slide-hd
														a(href="/movie/5807660d3c4315746e182e06" target="_blank")
															h5 《釜山行》到底有没有那么好？
													.slide-hd
														p 《釜山行》有着好莱坞般的剧本严丝合缝分秒不差，有框架整齐只需往里填坑的故事，那么它除了套路还有什么……
					//电影院搜索标签节点
					.col-md-4
						.cinemas-search
							#citySearch.city
								span 杭州
								i.glyphicon.glyphicon-triangle-bottom
								#citiesList.cities-list(style="display:none")
									//电影院标题分类名称
									ul.cities-list-hd
										- for(var i = 0; i < cityProgrammeList.length; i++)
											if cityProgrammeList[i].name === '热门'
												li.on(index=1) 热门
											else
												li(index=i+1) #{cityProgrammeList[i].name}
									hr
									//全国城市分类列表
									.cities-list-bd
										// 热门城市列表
										- for(var j = 0; j < cityProgrammeList.length; j++)
											if cityProgrammeList[j]
												if cityProgrammeList[j].name === '热门'
													.cities-list-item.active
														ul
															- for(var h = 0; h < cityCategoryList.length; h++)
																if cityCategoryList[h].name === '热门'
																	- for(var k = 0; k < cityCategoryList[h].cities.length; k++)
																		li: a.city-item(href="javascript:;") #{cityCategoryList[h].cities[k].name}
												else
													.cities-list-item
														- for(var y = 0; y < cityCategoryList.length; y++)
															if cityCategoryList[y].cityProgramme
																if cityProgrammeList[j].name === cityCategoryList[y].cityProgramme.name
																	dl.city-mod
																		dt #{cityCategoryList[y].name}
																		dd
																			ul
																				- for(var z = 0; z < cityCategoryList[y].cities.length; z++)
																					li: a.city-item(href="javascript:;") #{cityCategoryList[y].cities[z].name}
																		hr
							// 电影院搜索节点标签
							#citySug.city-suggestion
								.city-suggestion-input
									input(placeholder="搜索本地电影院")
									i.placeholder.glyphicon.glyphicon-search
								.city-suggestion-list(style="display: none")
									h5 可售票影院
									ul.auto-tip
						//电影院下方广告节点标签
						.right-advertisement
							a(href="" target="_blank")
								img(src="")
						// 电影活动部分节点标签
						.right-advertisementList
							h4 电影画廊&nbsp;.&nbsp;.&nbsp;.&nbsp;.&nbsp;.&nbsp;.
							ul
								li: a(href="/gallery") ☁️ 瓣~,向经典致敬
								li: a(href="/movie/580766853c4315746e182e08") 下次送礼,送TA一把瑞士军刀(╰_╯)#
								li: a(href="/movie/580765cc3c4315746e182e05") 《你的名字》曝光终极预告海报
						// 本周口碑榜节点标签
						.billboard
							each cat in categories
								if cat.name === '本周口碑榜'
									.billboard-hd
										h4 本周口碑榜
									.billboard-bd
										table.table.table-hover
											tbody
												- var i = 1
												if cat.movies && cat.movies.length > 0
													each item in cat.movies
														if i <= 10
															tr
																td.order=i++
																td
																	a(href="/movie/#{item._id}" target="_blank") #{item.title}
						// 本周口碑榜下方广告部分节点标签
						.right-advertisement
							a(href="javascript:;")
								img(src="")
	// 电影首页	JS 脚本
	script(src="/libs/scripts/js/movie/movie_index.min.js")












